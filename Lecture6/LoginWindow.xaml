<Window x:Class="Lecture6.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        SnapsToDevicePixels="True">
    <StackPanel Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Content="Логин:"/>
            <Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Content="Пароль:"/>
            <TextBox Name="LoginText" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Width="150"/>
            <PasswordBox Name="PasswordText" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Width="150"/>
        </Grid>
        <Button Name="LoginButton" HorizontalAlignment="Right" Margin="0,8,0,0" Padding="16,4,16,4" Click="OnLoginClick" Content="Войти"/>
    </StackPanel>
</Window>
